#include<stdio.h>
int evenodd(int n)
{      
       int l;
       if(n%2==0)
        {l=0;}
        else
       { l=1;
        }
    return l;
    }
int input()    
{int n;
printf("enter a number:");
scanf("%d",&n);
return n;
    }
void main()
{int l;
int n=input();
for(int i=0;i<=n;i++)
{int d=evenodd(i);
 if(d==0)
 {printf(" the number is even:%d\n",i);}
else 
{printf(" the number is odd:%d\n",i);
}       
}
}

